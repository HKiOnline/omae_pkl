module io.hki.apps.omae.Pc

import "Metatypes.pkl"
import "Genders.pkl"
import "Priorities.pkl"
import "Attributes.pkl"
import "QualityStat.pkl"
import "Limits.pkl"
import "Skills.pkl"

hidden Metatype = Metatypes
hidden Gender = Genders
hidden Priority = Priorities
hidden Rating: Skills.Rating 

class KarmaInfo {
    available: Int
    initial: Int
    gained: Int
}

class BuildInfo {
    gameplay: String
    karma: KarmaInfo
    initial_skill_points: Int
    initial_skill_group_points: Int
    initial_nuyen: Int
    priority_table: Priorities.Table?
}

id: String
name: String
aliases: Listing<String>?
description: String
metatype: Metatypes.Options
gender: Genders.Options?
birth_year: Int?

build: BuildInfo?

attributes: Attributes.AttributeStats
limits = Limits.calculateInherentLimits(attributes)
qualities: Listing<QualityStat.QualityStat>?

skill_groups: Listing<Skills.SkillGroup>?
skills: Listing<Skills.Skill>?
